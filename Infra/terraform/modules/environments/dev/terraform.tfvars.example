# terraform/environments/dev/terraform.tfvars.example
# Copy this file to terraform.tfvars and update with your values

# Basic Configuration
project_name = "myapp"
environment  = "dev"
aws_region   = "us-east-1"
owner        = "DevOps Team"
cost_center  = "engineering"

# SSH Key - Create this in AWS EC2 Console first
key_name = "myapp-dev-key"

# VPC Configuration
vpc_cidr              = "10.0.0.0/16"
public_subnet_cidrs   = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs  = ["10.0.11.0/24", "10.0.12.0/24"]
database_subnet_cidrs = ["10.0.21.0/24", "10.0.22.0/24"]
enable_nat_gateway    = true
enable_flow_logs      = true

# Compute Configuration (Free Tier)
instance_type        = "t3.micro"  # 750 hours/month free
asg_min_size         = 1
asg_max_size         = 3
asg_desired_capacity = 1  # Start with 1 instance for dev
app_port             = 8080
health_check_path    = "/health"

# SSL Certificate (optional)
# ssl_certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxx"

# Database Configuration (Free Tier)
db_name                     = "myappdb"
db_username                 = "dbadmin"
db_engine_version           = "15.4"
db_instance_class           = "db.t3.micro"  # 750 hours/month free
db_allocated_storage        = 20              # 20GB free
db_max_allocated_storage    = 100
db_multi_az                 = false           # Disable for dev to save costs
db_backup_retention_period  = 7
db_backup_window            = "03:00-04:00"
db_maintenance_window       = "mon:04:00-mon:05:00"
db_performance_insights     = false           # Disable for dev
db_enhanced_monitoring      = false           # Disable for dev
db_deletion_protection      = false           # Disable for dev
db_skip_final_snapshot      = true            # Enable for dev

# Cache Configuration (Free Tier)
cache_node_type              = "cache.t3.micro"  # 750 hours/month free
cache_num_nodes              = 1
cache_engine_version         = "7.0"
cache_parameter_group_family = "redis7"
cache_automatic_failover     = false  # Requires 2+ nodes

# S3 Configuration
s3_enable_versioning         = true
s3_enable_lifecycle          = true
s3_lifecycle_glacier_days    = 90
s3_lifecycle_expiration_days = 365

# Monitoring & Alerts
alert_email              = "devops@company.com"
enable_sns_notifications = true