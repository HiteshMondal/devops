// Jenkinsfile pipeline
pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'devops-webapp'
        DOCKER_TAG = "${BUILD_NUMBER}"
        DOCKER_REGISTRY = 'your-registry'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                script {
                    sh 'cd app && npm install'
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    sh 'cd app && npm test'
                }
            }
        }
        
        stage('Docker Build') {
            steps {
                script {
                    sh "docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} -f docker/Dockerfile ."
                    sh "docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest"
                }
            }
        }
        
        stage('Security Scan') {
            steps {
                script {
                    sh "docker scan ${DOCKER_IMAGE}:${DOCKER_TAG} || true"
                }
            }
        }
        
        stage('Push to Registry') {
            steps {
                script {
                    sh "docker push ${DOCKER_IMAGE}:${DOCKER_TAG}"
                    sh "docker push ${DOCKER_IMAGE}:latest"
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            steps {
                script {
                    sh 'kubectl apply -f kubernetes/'
                    sh "kubectl set image deployment/devops-webapp webapp=${DOCKER_IMAGE}:${DOCKER_TAG}"
                    sh 'kubectl rollout status deployment/devops-webapp'
                }
            }
        }
    }
    
    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
        always {
            cleanWs()
        }
    }
}