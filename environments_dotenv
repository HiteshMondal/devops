# ========================================
# DevOps Project Environment File example
# ========================================

APP_NAME=devops-app
NAMESPACE=devops-app
ARGO_APP=devops-app
KUBECONFIG_PROD=$HOME/.kube/config

# Docker / Image
DOCKERHUB_USERNAME=yourdockerhubusername
DOCKERHUB_PASSWORD=YourDockerhubPasswordOrToken
IMAGE_TAG=latest

# Git / GitOps
GIT_AUTHOR_NAME=YourName
GIT_AUTHOR_EMAIL=you@example.com
GITHUB_USERNAME=yourgithubusername

# GitHub Actions secrets and variables
DOCKER_USERNAME=yourdockerhubusername
DOCKER_PASSWORD=YourDockerhubPasswordOrToken

# GitLab secrets and variables
CI_REGISTRY_USER=
CI_REGISTRY_PASSWORD=
GITLAB_NAMESPACE=yourusername
GITLAB_PROJECT_NAME=
GITLAB_TOKEN=

# Deployment Control
# local | prod
DEPLOY_TARGET=local
# true | false
BUILD_PUSH=false
CI=false
DRY_RUN=false

# Kubernetes Safety
KUBE_CONTEXT=minikube

# Monitoring
GRAFANA_ADMIN_PASSWORD=change-me

# Argo CD
ARGO_CD_VERSION=v2.9.3

# Minikube
MINIKUBE_INGRESS=true
